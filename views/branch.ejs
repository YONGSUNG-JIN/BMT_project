<!DOCTYPE html>
<html lang="en">
<%- include('./partials/head.ejs') %>
    <body>
        <%- include('./partials/nav.ejs') %>
        <h1><%=currentUser.branch%></h1>
        <table class="table table-bordered table-hover">
            <h2>지점 특이 일정</h2>
            <thead class="thead-dark">
                <tr>
                    <th scope="col">No</th>
                    <th scope="col">Title</th>
                    <th scope="col">Category</th>
                    <th scope="col">Written</th>
                    <th scope="col">Due</th>
                    <th scope="col" class="text-end">Status</th>
                </tr>
            </thead>

            <tbody>
                <% if(branchSchedule.length > 0) { %>
                    <% branchSchedule.forEach(schedule => { %>
                        <tr>
                            <td scope="row"><%= branchSchedule.indexOf(schedule)+1 %></td>
                            <td><a href="/branch/<%= schedule.id %>" type="button" class="btn btn-light btn-small"><%= schedule.title %></a></td>
                            <td><%= schedule.category %></td>
                            <td><%= schedule.updatedAt.toDateString() %></td>
                            <td><%= schedule.date %></td>
                            <td class="text-end">
                                <a href="/schedule/<%=schedule._id%>" type="button" class="btn btn-light btn-small"><%= schedule.status %></a>
                            </td>
                        </tr>
                    <% }) %>
                <% } %>
                <div class="col-6 d-flex justify-content-end">
                    <a href="branch/addSchedule" type="button" class="btn btn-primary">ADD</a>
                </div>
            </tbody>

            <table class="table table-hover">
                <thead class="thead-dark">
                    <h2>지점 정보</h2>
                </thead>
                <tbody>
                    <tr>
                        <th scope="row">사업자등록번호</th>
                        <td scope="col"><%=branchInfo.basicInfo.registrationNo%></td>
                    </tr>
                    <tr>
                        <th scope="col">전화번호</th>
                        <td scope="col"><%=branchInfo.basicInfo.phoneNo%></td>
                    </tr>                    
                    <tr>
                        <th scope="col">주소</th>
                        <td scope="col"><%=branchInfo.basicInfo.address%></td>
                    </tr>                    
                    <tr>
                        <th scope="col">층수</th>
                        <td scope="col"><%=branchInfo.basicInfo.floor%></td>
                    </tr>                   
                    <tr>
                        <th scope="col">수용인원</th>
                        <td scope="col"><%=branchInfo.basicInfo.capa%></td>
                    </tr>                    
                </tbody>
            </table>
    </body>
</html>